{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
    { "source": "/api/:path*", "destination": "https://api.rankypulse.com/api/:path*" },
    { "source": "/audit/:path*", "destination": "/app.html" },
    { "source": "/rank/:path*", "destination": "/app.html" },
    { "source": "/improve/:path*", "destination": "/app.html" },
    { "source": "/upgrade/:path*", "destination": "/app.html" },
    { "source": "/plan-change/:path*", "destination": "/app.html" },
    { "source": "/account/:path*", "destination": "/app.html" },
    { "source": "/admin/:path*", "destination": "/app.html" },
    { "source": "/auth/:path*", "destination": "/app.html" },
    { "source": "/embed/:path*", "destination": "/app.html" },
    { "source": "/leads/:path*", "destination": "/app.html" },
    { "source": "/r/:path*", "destination": "/app.html" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(audit|rank|improve|upgrade|plan-change|account|admin|auth|embed|leads|r)(/.*)?", "dest": "/app.html" }
  ]
}
